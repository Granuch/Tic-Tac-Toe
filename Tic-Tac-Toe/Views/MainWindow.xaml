<Window x:Class="Tic_Tac_Toe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Tic_Tac_Toe.ViewModels"
        Title="Tic-Tac-Toe" Width="350" Height="470">

    <Window.DataContext>
        <vm:GameViewModel />
    </Window.DataContext>

    <StackPanel Margin="10">

        <TextBlock Text="{Binding StatusText}" 
                   FontSize="20" 
                   Margin="0 0 0 10"
                   TextAlignment="Center"/>

        <UniformGrid Rows="3" Columns="3" Margin="0 0 0 10">

            <Button Content="{Binding Board[0]}" Command="{Binding CellClickCommand}" 
                    CommandParameter="0" FontSize="36" Height="80"/>
            <Button Content="{Binding Board[1]}" Command="{Binding CellClickCommand}" 
                    CommandParameter="1" FontSize="36" Height="80"/>
            <Button Content="{Binding Board[2]}" Command="{Binding CellClickCommand}" 
                    CommandParameter="2" FontSize="36" Height="80"/>

            <Button Content="{Binding Board[3]}" Command="{Binding CellClickCommand}" 
                    CommandParameter="3" FontSize="36" Height="80"/>
            <Button Content="{Binding Board[4]}" Command="{Binding CellClickCommand}" 
                    CommandParameter="4" FontSize="36" Height="80"/>
            <Button Content="{Binding Board[5]}" Command="{Binding CellClickCommand}" 
                    CommandParameter="5" FontSize="36" Height="80"/>

            <Button Content="{Binding Board[6]}" Command="{Binding CellClickCommand}" 
                    CommandParameter="6" FontSize="36" Height="80"/>
            <Button Content="{Binding Board[7]}" Command="{Binding CellClickCommand}" 
                    CommandParameter="7" FontSize="36" Height="80"/>
            <Button Content="{Binding Board[8]}" Command="{Binding CellClickCommand}" 
                    CommandParameter="8" FontSize="36" Height="80"/>

        </UniformGrid>

        <UniformGrid Rows="1" Columns="2" Margin="0 0 0 0">
            <Button Content="Рестарт" 
                    Command="{Binding RestartCommand}" 
                    FontSize="16" 
                    Margin="0,0,5,0"
                    Padding="10"/>

            <Button Content="Статистика" 
                    Click="Statistics_Click"
                    FontSize="16"
                    Margin="5,0,0,0"
                    Padding="10"/>
        </UniformGrid>

    </StackPanel>
</Window>