<Window x:Class="Tic_Tac_Toe.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Settings}" Height="415" Width="475"
        MinHeight="300" MinWidth="400"
        Style="{StaticResource ModernWindow}"
        WindowStartupLocation="CenterScreen">

	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Background decoration -->
		<Ellipse Grid.RowSpan="4"
                 Width="200" Height="200" 
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,-80,-80,0" Opacity="0.05">
			<Ellipse.Fill>
				<RadialGradientBrush>
					<GradientStop Color="#00d9ff" Offset="0"/>
					<GradientStop Color="Transparent" Offset="1"/>
				</RadialGradientBrush>
			</Ellipse.Fill>
		</Ellipse>

		<!-- Header -->
		<TextBlock Grid.Row="0"
                   Text="{DynamicResource SettingsTitle}" 
                   Style="{StaticResource TitleText}"
                   Margin="0,10,0,5"/>
		<TextBlock Grid.Row="1"
                   Text="{DynamicResource SettingsSubtitle}" 
                   Style="{StaticResource SubtitleText}"
                   Margin="0,0,0,25"/>

		<!-- Settings Card -->
		<Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="0,0,0,20">
			<StackPanel>
				<TextBlock Text="{DynamicResource Language}" 
                           Style="{StaticResource LabelText}"
                           FontSize="16"
                           Margin="0,0,0,10"/>

				<ComboBox x:Name="CmbLanguage" 
                          Style="{StaticResource ModernComboBox}"
                          SelectionChanged="CmbLanguage_SelectionChanged"
                          Foreground="#222">
					<ComboBoxItem Content="English" Tag="en"/>
					<ComboBoxItem Content="Українська" Tag="uk"/>
				</ComboBox>
			</StackPanel>
		</Border>

		<!-- Close Button -->
		<Button Grid.Row="3"
                Content="{DynamicResource Close}" 
                Click="Close_Click"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Center"
                Padding="40,12"/>
	</Grid>
</Window>
