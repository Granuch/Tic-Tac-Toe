<Window x:Class="Tic_Tac_Toe.Views.StatisticsWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
Title="{DynamicResource Statistics}" Height="600" Width="550"
MinHeight="400" MinWidth="400"
Style="{StaticResource ModernWindow}"
WindowStartupLocation="CenterScreen">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Background decoration -->
        <Ellipse Grid.RowSpan="5"
                 Width="300" Height="300" 
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,-130,-130,0" Opacity="0.05">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#64ffda" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Grid.RowSpan="5"
                 Width="200" Height="200" 
                 HorizontalAlignment="Left" VerticalAlignment="Bottom"
                 Margin="-90,0,0,-90" Opacity="0.05">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#ffa726" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{DynamicResource StatisticsTitle}" 
                   Style="{StaticResource TitleText}"
                   Margin="0,10,0,5"/>
        <TextBlock Grid.Row="1"
                   Text="{DynamicResource TrackPerformance}" 
                   Style="{StaticResource SubtitleText}"
                   Margin="0,0,0,25"/>

        <!-- Player Selection Card -->
        <Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="{DynamicResource SelectPlayer}" 
                           Style="{StaticResource LabelText}"
                           FontSize="16"
                           />
                <ComboBox x:Name="CmbPlayers" 
                          Style="{StaticResource ModernComboBox}"
                          SelectionChanged="CmbPlayers_SelectionChanged"
                          DisplayMemberPath="Name"
                          Foreground="#222"/>
            </StackPanel>
        </Border>

        <!-- Statistics Card - Scrollable -->
        <Border Grid.Row="3" Style="{StaticResource CardPanel}" Margin="0,0,0,20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="PanelStats">
                    <!-- Main Stats -->
                    <Border Background="#1a2744" CornerRadius="10" Padding="15" Margin="0,0,0,15">
                        <TextBlock x:Name="TxtStats" 
                                   Foreground="{StaticResource TextLightBrush}"
                                   FontSize="15" 
                                   TextWrapping="Wrap"
                                   LineHeight="26"
                                   Text="{DynamicResource SelectPlayerToView}"/>
                    </Border>

                    <!-- Game History -->
                    <TextBlock Text="{DynamicResource GameHistory}" 
                               Style="{StaticResource LabelText}"
                               Margin="0,5,0,10"
                               Visibility="{Binding ElementName=TxtHistory, Path=Text, Converter={x:Null}}"/>
                    
                    <Border Background="#1a2744" CornerRadius="10" Padding="15"
                            Visibility="{Binding ElementName=TxtHistory, Path=Visibility}">
                        <TextBlock x:Name="TxtHistory" 
                                   FontSize="13" 
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource TextMutedBrush}"
                                   LineHeight="22"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Close Button -->
        <Button Grid.Row="4"
                Content="{DynamicResource Close}" 
                Click="Close_Click"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Center"
                Padding="40,12"/>
    </Grid>
</Window>