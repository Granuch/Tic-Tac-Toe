<Window x:Class="Tic_Tac_Toe.Views.PlayerSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вибір гравців" Height="712" Width="539"
        Style="{StaticResource ModernWindow}"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Background decoration -->
        <Ellipse Width="250" Height="250" 
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,-80,-80,0" Opacity="0.05">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#00d9ff" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="200" Height="200" 
                 HorizontalAlignment="Left" VerticalAlignment="Bottom"
                 Margin="-60,0,0,-60" Opacity="0.05">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#e94560" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <StackPanel Margin="30">
            <!-- Header -->
            <TextBlock Text="🎮 TIC-TAC-TOE" 
                       Style="{StaticResource TitleText}"
                       Margin="0,10,0,5"/>
            <TextBlock Text="Choose your game settings" 
                       Style="{StaticResource SubtitleText}"
                       Margin="0,0,0,25"/>

            <!-- Game Mode Card -->
            <Border Style="{StaticResource CardPanel}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="🎯 Режим гри" 
                               Style="{StaticResource LabelText}"
                               FontSize="16" Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <RadioButton x:Name="RadioPvP" 
                                     Content="👥 Гравець vs Гравець" 
                                     IsChecked="True" 
                                     GroupName="GameMode"
                                     Style="{StaticResource ModernRadioButton}"
                                     Grid.Column="0"/>
                        <RadioButton x:Name="RadioPvE" 
                                     Content="🤖 Гра з Ботом" 
                                     GroupName="GameMode"
                                     Style="{StaticResource ModernRadioButton}"
                                     Grid.Column="2"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Player X Card -->
            <Border Style="{StaticResource CardPanel}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Style="{StaticResource LabelText}" FontSize="16">
                        <Run Text="Гравець X " Foreground="#00d9ff"/>
                        <Run Text="(Хрестики)" Foreground="#8892b0"/>
                    </TextBlock>
                    <TextBox x:Name="TxtPlayerX" 
                             Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
            </Border>

            <!-- Player O Card -->
            <Border Style="{StaticResource CardPanel}" Margin="0,0,0,20" x:Name="PanelPlayerO">
                <StackPanel>
                    <TextBlock Style="{StaticResource LabelText}" FontSize="16">
                        <Run Text="Гравець O " Foreground="#e94560"/>
                        <Run Text="(Нолики)" Foreground="#8892b0"/>
                    </TextBlock>
                    <TextBox x:Name="TxtPlayerO" 
                             Style="{StaticResource ModernTextBox}"/>
                </StackPanel>
            </Border>

            <!-- Bot Difficulty Card -->
            <Border Style="{StaticResource CardPanel}" Margin="0,0,0,20" 
                    x:Name="PanelBot" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="🤖 Складність бота" 
                               Style="{StaticResource LabelText}"
                               FontSize="16"/>
                    <ComboBox x:Name="CmbDifficulty" 
                              Style="{StaticResource ModernComboBox}" 
                              SelectedIndex="0"
                              Foreground="#222">
                        <ComboBoxItem Content="😊 Легкий" Foreground="#222"/>
                        <ComboBoxItem Content="😐 Середній" Foreground="#222"/>
                        <ComboBoxItem Content="😈 Складний"  Foreground="#222"/>
                    </ComboBox>
                </StackPanel>
            </Border>

            <!-- Start Button -->
            <Button Content="🚀 Почати гру" 
                    Click="StartGame_Click" 
                    Style="{StaticResource AccentButton}"
                    FontSize="18"
                    Padding="30,15"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>