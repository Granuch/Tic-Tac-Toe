<Window x:Class="Tic_Tac_Toe.Views.PlayerSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вибір гравців" Height="361" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Режим гри:" FontSize="16" FontWeight="Bold"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <RadioButton x:Name="RadioPvP" Content="Гравець проти Гравця" 
                        IsChecked="True" GroupName="GameMode" 
                        FontSize="14" Margin="0,0,20,0"/>
            <RadioButton x:Name="RadioPvE" Content="Гра з Ботом" 
                        GroupName="GameMode" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <TextBlock Text="Гравець X (Хрестики):" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPlayerX" FontSize="14" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="6" x:Name="PanelPlayerO">
            <TextBlock Text="Гравець O (Нолики):" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPlayerO" FontSize="14" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="6" x:Name="PanelBot" Visibility="Collapsed">
            <TextBlock Text="Складність бота:" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox x:Name="CmbDifficulty" FontSize="14" SelectedIndex="0">
                <ComboBoxItem Content="Легкий"/>
                <ComboBoxItem Content="Середній"/>
                <ComboBoxItem Content="Складний"/>
            </ComboBox>
        </StackPanel>

        <Button Grid.Row="8" Content="Почати гру" 
                Click="StartGame_Click" 
                FontSize="16" Padding="10" 
                HorizontalAlignment="Center"
                Width="150" Margin="0,5,0,-5"/>
    </Grid>
</Window>